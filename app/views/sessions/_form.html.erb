<%= form_for :session, url: session_path, html: { :method => :post, :remote => true, class: "form-horizontal" } do |f| %>
  <div class="alert alert-danger" id="login_errors" style="display:none;"></div>
  <div class="form-group">
    <%= f.label :email, :class => "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= f.text_field :email, placeholder: "Email", :class =>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, :class => "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= f.password_field :password, placeholder: "Password", :class =>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit "Login", :class =>"btn btn-primary" %>
    </div>
  </div>
<% end %>