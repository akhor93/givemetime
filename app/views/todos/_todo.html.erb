<div id="todo_<%= todo.id %>">
	<%= form_for :todo, url: to_event_todo_path(todo.id), html: { :remote => true, :method => :post } do |f| %>
		<%= f.submit "Insert TODO: #{todo.title}" %>
	<% end %>
	<%= todo.title %> (<%= todo.duration %> min)
	<div style="display: inline-block;">
		<%= form_for :todo, url: todo_path(todo.id), html: { :remote => true, :method => :delete } do |f| %>
		<%= f.submit "DELETE TODO: #{todo.title}" %>
		<% end %>
	</div>
</div>