<%= form_for @user, :html => { :class => 'form-horizontal'} do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:
  </h2>

  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %></li>
    <% end %></ul>
</div>
<% end %>

<div class="control-group">
  <%= f.label :id, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.number_field :id %></div>
</div>
<div class="control-group">
  <%= f.label :first_name, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :first_name, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :last_name, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :last_name, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :email, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :email, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :password, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :password, :class => 'text_field' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :confirmed, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.check_box :confirmed %>
  </div>
</div>
<div class="control-group">
  <%= f.label :time_created, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.datetime_select :time_created %>
  </div>
</div>
<div class="control-group">
  <%= f.label :admin %>
  <br />
  <div class="controls">
    <%= f.check_box :admin %>
  </div>
</div>
<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary'%>
  <%= link_to 'Show', @user, :class => 'btn btn-default' %>
  <%= link_to 'Back', users_path, :class => 'btn btn-default' %>
</div>
<% end %>
