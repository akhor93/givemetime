<%= form_for :activity, url: activities_path, html: { :method => :post, :remote => true, class: "form-horizontal"} do |f| %>
  <div class="alert alert-danger" id="activity_errors" style="display:none;"></div>
  <div class="form-group">
    <%= f.label 'Title', :class => "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= f.text_field :title , placeholder: "Title", :class =>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label 'Duration (min)', :class => "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= f.hidden_field :duration %>
      <button type="button" id="duration_button_5" class="btn btn-default btn-lg activity_duration_button" data-category="activity"> 5
      </button>
      <button type="button" id="duration_button_10" class="btn btn-default btn-lg activity_duration_button" data-category="activity"> 10
      </button>
      <button type="button" id="duration_button_15" class="btn btn-default btn-lg activity_duration_button" data-category="activity">	15
      </button>
      <button type="button" id="duration_button_30" class="btn btn-default btn-lg activity_duration_button" data-category="activity">	30
      </button>
      <button type="button" id="duration_button_60" class="btn btn-default btn-lg activity_duration_button" data-category="activity">	60
      </button>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= f.submit "Submit Activity", :class =>"btn btn-primary" %>
    </div>
  </div>
<% end %>