<h1>Reset Password</h1>
<%= form_for @user, password_reset_path(params[:id], html: { :method => :post, :remote => true, class: "form-horizontal" }) do |f| %>
	<div class="alert alert-danger" id="password_reset_errors" style="display:none;"></div>
	<div class="form-group">
		<%= f.password_field :password, placeholder: "Password", :class =>"form-control" %>
	</div>
	<div class="form-group">
		<%= f.password_field :password_confirmation, placeholder: "Password Confirmation", :class =>"form-control" %>
	</div>
	<div class="form-group">
    <%= f.submit "Update Password", :class =>"btn btn-primary" %>
  </div>
<% end %>