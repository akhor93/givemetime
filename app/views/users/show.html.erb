<% if current_user %>
  <%= link_to "Log Out", sessions_destroy_path %>
<% else %>
  <%= simple_form_for sessions_create_path do |f| %>
    <%= f.input :email, placeholder: "Email" %>
    <%= f.input :password, placeholder: "Password" %>
    <%= f.button :submit, class: "btn-primary" %>
  <% end %>
<% end %>

<div class="container">
<p id="notice"><%= notice %></p>

<h1><%= @user.first_name %> <%= @user.last_name %></h1>

<p>
  <b>Id:</b>
  <%= @user.id %>
</p>

<p>
  <b>First name:</b>
  <%= @user.first_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @user.last_name %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Password:</b>
  <%= @user.password %>
</p>

<p>
  <b>Confirmed:</b>
  <%= @user.confirmed %>
</p>

<p>
  <b>Time created:</b>
  <%= @user.time_created %>
</p>

<p>
  <b>Admin:</b>
  <%= @user.admin %>
</p>

<div class="form-actions">
  <%= link_to 'Edit', edit_user_path(@user), :class => "btn btn-default" %> |
  <%= link_to 'Back', users_path, :class => "btn btn-default"  %> |
  <%= link_to 'Delete', users_path, :method => 'delete', :confirm => "Are you sure?", :class => "btn btn-danger"  %>
</div>
</div>