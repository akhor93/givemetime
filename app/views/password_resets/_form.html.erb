<%= form_tag password_resets_path, :remote => true, :class=> "form-horizontal" do %>
  <div class="alert alert-success" id="password_reset_success" style="display:none;"></div>
  <div class="alert alert-danger" id="password_reset_errors" style="display:none;"></div>
  <div class="form-group">
    <%= label_tag :email, nil, :class => "control-label col-sm-3" %>
    <div class="col-sm-9">
      <%= text_field_tag :email, nil, :class =>"form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-9">
      <%= submit_tag "Reset Password", :class =>"btn btn-primary" %>
    </div>
  </div>
<% end %>