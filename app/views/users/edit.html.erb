<% javascript 'users.js' %>
<h2 style="text-align:center;">Edit Account Information</h2>
<div class="container" style="width: 800px;">
	<%= form_for @user, :html => { :class => 'form-horizontal', :id => 'edit_user_form'} do |f| %>
		<% if @user.errors.any? %>
			<div id="error_explanation">
			  <h2>
			    <%= pluralize(@user.errors.count, "error") %>
			    prohibited this user from being saved:
			  </h2>

			  <ul>
			    <% @user.errors.full_messages.each do |msg| %>
			    <li>
			      <%= msg %></li>
			    <% end %></ul>
			</div>
		<% end %>
		<div class="form-group">
			<div class="row">
				<div class="col-md-2">
					<%= f.label :first_name, :class => 'control-label' %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :first_name, :class => 'form-control' %>
				</div>
				<div class="col-md-2">
					<%= f.label :last_name, :class => 'control-label' %>
				</div>
				<div class="col-md-4">
					<%= f.text_field :last_name, :class => 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<%= f.label :password, :class => 'control-label' %>
				</div>
				<div class="col-md-4">
					<%= f.password_field :password, :class => 'form-control' %>
				</div>
				<div class="col-md-2">
					<%= f.label :password_confirmation, "Password Confirmation", { :class => "control-label", :style => 'padding-top:0;' } %>
				</div>
				<div class="col-md-4">
					<%= f.password_field :password_confirmation, placeholder: "Type Password Again", :class => "form-control" %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<%= f.label :email, :class => 'control-label' %>
				</div>
				<div class="col-md-10">
					<%= f.text_field :email, :class => 'form-control' %>
				</div>
			</div>
			<div class="row">
				<div class="col-md-2">
					<%= f.label :time_zone, :class => 'control-label' %>
				</div>
				<div class="col-md-10">
					<select class="form-control">
						<% ActiveSupport::TimeZone.us_zones.each do |zone| %>
							<% puts current_user.time_zone %>
							<% if zone.name == current_user.time_zone %>
								<option selected="selected"><%= zone %></option>
							<% else %>
								<option><%= zone %></option>
							<% end %>
						<% end %>
					</select>
				</div>
			</div>
			<div class="row">
				<div class="form-actions">
			  	<%= f.submit nil, :class => 'btn btn-primary'%>
			  	<%= link_to 'Back', '/calendar', :class => 'btn btn-default' %>
				</div>
			</div>
		</div>
	<% end %>
</div>