<div class="tab-pane fade" id="todos_tab">
	<div class="container">
		<table class="table table-hover" id="todos_table" style="margin-top:10px;">
			<thead>
				<tr>
					<td>#</td>
					<td>Title</td>
					<td>Duration</td>
					<td>Created</td>
					<td>Priority</td>
					<td>Actions</td>
				</tr>
			</thead>
			<tbody>
				<% count = 1 %>
				<% current_user.todos.each do |todo| %>
					<%= render partial: 'calendar/todo_tab/todo_row', locals: {todo: todo, count: count} %>
					<% count = count + 1 %>
				<% end %>
			</tbody>
		</table>
	</div>
</div>