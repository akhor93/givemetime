<%= form_for @user, :html => { :class => 'form-horizontal'} do |f| %>
<% if @user.errors.any? %>
<div id="error_explanation">
  <h2>
    <%= pluralize(@user.errors.count, "error") %>
    prohibited this user from being saved:
  </h2>

  <ul>
    <% @user.errors.full_messages.each do |msg| %>
    <li>
      <%= msg %></li>
    <% end %></ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :first_name, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :first_name, :class => 'text_field' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :last_name, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :last_name, :class => 'text_field' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :email, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :email, :class => 'text_field' %>
  </div>
</div>
<div class="form-group">
  <%= f.label :password, :class => 'control-label' %>
  <br />
  <div class="controls">
    <%= f.text_field :password, :class => 'text_field' %>
  </div>
</div>
<div class="form-group">      
  <%= f.label :password_confirmation, "Password Confirmation", :class => "control-label" %>
    <div>
      <%= f.password_field :password_confirmation, placeholder: "Type Password Again", :class => "form-control" %>
    </div>
  </div>
<div class="form-actions">
  <%= f.submit nil, :class => 'btn btn-primary'%>
  <%= link_to 'Show', @user, :class => 'btn btn-default' %>
  <%= link_to 'Back', users_path, :class => 'btn btn-default' %>
</div>
<% end %>
